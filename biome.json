{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNamingConvention": "off",
        "useImportType": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "suspicious": {
        "noConsole": {
          "level": "on",
          "options": {
            "allow": ["assert", "error", "info", "warn", "debug"]
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":NODE:", ":PACKAGE:", ":ALIAS:", "./**", ":PATH:"],
            "identifierOrder": "natural"
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/__tests__/**/*.{ts,js}",
        "**/tests/**/*.{ts,js}",
        "**/scripts/**/*.{ts,js}"
      ]
    },
    {
      "includes": [
        "prisma/**/*.prisma",
        "src/**/*.ts",
        "routes/**/*.ts",
        "functions/**/*.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "warn"
          }
        }
      }
    }
  ]
}
